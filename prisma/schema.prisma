generator client {
    provider = "prisma-client-js"
    output   = "../app/generated/prisma"
}

datasource db {
    provider = "sqlite"
    url      = env("DATABASE_URL")
}

model User {
    id              Int      @id @default(autoincrement())
    username        String
    email           String   @unique
    passwordHash    String
    createdAt       DateTime @default(now())
    refreshToken    String? // JWT
    discordId       String?  @unique // Discord ID (OAuth)
    discordUsername String? // Discord Username (OAuth)
    githubId        String?  @unique // GitHub ID (OAuth)
    githubUsername  String? // GitHub Username (OAuth)
}
